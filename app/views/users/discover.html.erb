<% if current_user %>
  <%= render partial: 'partials/navbar_user'%>
<% else %>
  <%= render partial: 'partials/navbar_welcome'%>
<% end %>
<br><br>


<div class="movies">
  <h1>Discover Movies You'll Enjoy: </h1>
  <br>
    <ul>
      <a href="/dashboard/movies?q=top%20rated" class="btn btn-outline-success my-2 my-sm-0" role='button'>View Top Movies</a>
   </ul>
   <br>
  </div>
  <h2>OR Search Movie By Keyword</h2>
  <br>
  <ul>
  <%= form_with url: dashboard_movies_path, method: :get, local:true do |f|%>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <div class="mb-3">
        <%= f.label :Search_by_keyword, { class: "form-label"} %>
        <%= f.text_field :keyword, { class: "form-control", placeholder: "Enter Keyword Here..." } %>
      </div>

      <%= f.submit "Search", class: "btn btn-success" %>

    </div>
  </div>
  <% end %>
  </ul>
</div>